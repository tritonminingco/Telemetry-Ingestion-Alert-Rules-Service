# DSG Telemetry Service Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://dsg_user:dsg_password@postgres:5432/dsg_telemetry
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://redis:6379

# Authentication
AUTH_TOKEN=your-secure-auth-token-here

# Performance Settings
BATCH_SIZE=100
BATCH_TIMEOUT_MS=1000
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_SECONDS=60

# CORS Settings
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Development Overrides (uncomment for local development)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/dsg_telemetry
# REDIS_URL=redis://localhost:6379
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0
